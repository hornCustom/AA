<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Title">
		<item name="android:textColor">#ff000000</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:paddingLeft">10dip</item>
	</style>
	<style name="StyleListView">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:divider">@drawable/divider</item>
		<item name="android:cacheColorHint">@color/transparent</item>
		
	</style>
	<style name="StyleListViewItem">
	<item name="android:textSize">20sp</item>
	<item name="android:textColor">#ff000000</item>
	</style>
	
	<style name="NumberButtonText">
		<item name="android:textSize">22sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">#ff000000</item>
		<item name="android:background">@drawable/number_selector</item>
	</style>
	
	<style name="Help">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@color/bottomBlack</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">16sp</item>
	</style>
	
	<style name="Helpson">
	    <item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:textSize">14sp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		
	</style>
</resources>
