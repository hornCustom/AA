<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_alignParentBottom="true" >

    <RelativeLayout
        android:id="@+id/layBottomBar"
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:background="@color/bottomBlack"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivBottomIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_big" />

        <TextView
            android:id="@+id/tvBottomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ivBottomIcon"
            android:padding="5dp"
            android:text="@string/WelcomeInfo"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/main_btn" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layBottomListViewBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layBottomBar" >

        <ListView
            android:id="@+id/lvSlideList"
            style="@style/StyleListView" />
    </LinearLayout>

</RelativeLayout>